<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idRLBSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_shade_1"
    android:padding="4dp">

    <!--text view for displaying course name-->
    <TextView
        android:id="@+id/reveiwDoctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:padding="4dp"
        android:text="Full Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!--image view for displaying course image-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/reveiwDoctorName"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

    <!--text view for displaying course description-->
    <TextView
        android:id="@+id/reveiwDoctorRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recImage"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/recImage"
        android:layout_toRightOf="@id/recImage"
        android:padding="3dp"
        android:text="Review Rating"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/reveiwerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reveiwDoctorRating"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/recImage"
        android:layout_toRightOf="@id/recImage"
        android:padding="3dp"
        android:text="Review Rating"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reveiwDoctorRating"
        android:orientation="horizontal"
        android:weightSum="2">

        <!--text view for displaying course price-->
        <TextView
            android:id="@+id/reviewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textDates"
            android:layout_margin="4dp"
            android:layout_toRightOf="@id/recImage"
            android:padding="3dp"
            android:text="Message"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
